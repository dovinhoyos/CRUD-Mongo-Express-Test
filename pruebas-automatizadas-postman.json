		},
		{
			"name": "Agregar Producto",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Código de estado es 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"Respuesta contiene un objeto json con atributo precio de tipo number\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.precio).to.be.a(\"number\");",
							"});",
							"",
							"// Actualizar contador de productos cuando se agrega exitosamente",
							"if (pm.response.code === 201) {",
							"    // Obtener el valor actual de CANTIDAD_PRODUCTOS, si no existe inicializar en 0",
							"    let cantidadActual = pm.collectionVariables.get(\"CANTIDAD_PRODUCTOS\");",
							"    ",
							"    // Si la variable no existe o no es un número válido, inicializar en 0",
							"    if (!cantidadActual || isNaN(cantidadActual)) {",
							"        cantidadActual = 0;",
							"    } else {",
							"        cantidadActual = parseInt(cantidadActual);",
							"    }",
							"    ",
							"    // Incrementar la cantidad en 1",
							"    cantidadActual += 1;",
							"    ",
							"    // Guardar el nuevo valor en la variable de colección",
							"    pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", cantidadActual);",
							"    ",
							"    console.log(`Producto agregado exitosamente. Cantidad total de productos: ${cantidadActual}`);",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
