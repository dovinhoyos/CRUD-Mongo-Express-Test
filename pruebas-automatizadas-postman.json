		{
			"name": "Eliminar Producto",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Response contains correct deletion message\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.mensaje).to.eql(\"Producto eliminado\");",
							"});",
							"",
							"// Update collection variable when product is successfully deleted",
							"pm.test(\"Update product count after successful deletion\", function () {",
							"    var jsonData = pm.response.json();",
							"    ",
							"    // Check if deletion was successful",
							"    if (jsonData.mensaje === \"Producto eliminado\") {",
							"        // Get current value of CANTIDAD_PRODUCTOS",
							"        var currentCount = pm.collectionVariables.get(\"CANTIDAD_PRODUCTOS\");",
							"        ",
							"        // Convert to number and decrease by 1",
							"        var newCount = parseInt(currentCount || 0) - 1;",
							"        ",
							"        // Ensure count doesn't go below 0",
							"        if (newCount < 0) {",
							"            newCount = 0;",
							"        }",
							"        ",
							"        // Update the collection variable",
							"        pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", newCount.toString());",
							"        ",
							"        console.log(\"Product count updated from \" + currentCount + \" to \" + newCount);",
							"    }",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
