	"item": [
		{
			"name": "Obtener Productos",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Código de estado es 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Respuesta contiene un array\", function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an(\"array\");",
							"});",
							"",
							"pm.test(\"Respuesta objeto de array contiene un campo codigo\", function () {",
							"    const jsonData = pm.response.json();",
							"    const primerProducto = jsonData[0]",
							"    pm.expect(primerProducto).to.have.property(\"codigo\");",
							"});",
							"",
							"// Update collection variable with product count",
							"const responseData = pm.response.json();",
							"const productCount = responseData.length;",
							"pm.collectionVariables.set(\"CANTIDAD_PRODUCTOS\", productCount);",
							"",
							"console.log(`Updated CANTIDAD_PRODUCTOS variable with count: ${productCount}`);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
